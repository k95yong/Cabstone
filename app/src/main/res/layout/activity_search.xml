<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <EditText
        android:id="@+id/search_et_keyword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/theme_round_edit_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="검색어 입력"
        android:textColorHint="@color/cleared"
        android:fontFamily="@font/jungdong"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/search_btn_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="지역 선택"/>

    <Button
        android:id="@+id/search_btn_current_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="내 위치로 검색"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/search_btn_keyword_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:textSize="18sp"
            android:text="검색"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/search_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:textSize="18sp"
            android:text="취소"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>